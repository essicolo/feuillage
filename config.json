{
  "view": {
    "name": "Prélèvements et rejets d'eau — Québec",
    "description": "Prélèvements (2012-2024) et rejets imputés (2001-2024)",
    "center": [
      47.0,
      -71.0
    ],
    "zoom": 7,
    "basemap": "osm"
  },
  "layers": [
    {
      "name": "Régions hydrographiques",
      "url": "./geojson/regions.geojson",
      "visible": true,
      "color": "#999999",
      "popup_template": "region"
    },
    {
      "name": "Prélèvements",
      "url": "./geojson/prelevements.geojson",
      "visible": true,
      "color": "#0072B2",
      "popup_template": "prelevement"
    },
    {
      "name": "Rejets",
      "url": "./geojson/rejets.geojson",
      "visible": true,
      "color": "#D55E00",
      "popup_template": "rejet"
    }
  ],
  "popup_templates": {
      "region": {
      "title": "Région hydrographique — {properties.nom}",
      "sections": [
        {
          "type": "properties",
          "fields": [
            "layer"
          ]
        },
        {
          "type": "chart",
          "chart_type": "bar",
          "data_field": "volumes_annuels",
          "options": {
            "title": "Volume annuel",
            "xlabel": "Année",
            "ylabel": "m³"
          }
        },
        {
          "type": "chart",
          "chart_type": "line",
          "data_field": "profil_mensuel",
          "options": {
            "title": "Profil mensuel moyen",
            "xlabel": "Mois",
            "ylabel": "m³"
          }
        }
      ]
    },
    "prelevement": {
      "title": "Prélèvement — {properties.site}",
      "sections": [
        {
          "type": "properties",
          "fields": [
            "secteur",
            "volume_annuel_moyen_m3"
          ]
        },
        {
          "type": "chart",
          "chart_type": "bar",
          "data_field": "volumes_annuels",
          "options": {
            "title": "Volume annuel",
            "xlabel": "Année",
            "ylabel": "m³"
          }
        },
        {
          "type": "chart",
          "chart_type": "line",
          "data_field": "profil_mensuel",
          "options": {
            "title": "Profil mensuel moyen",
            "xlabel": "Mois",
            "ylabel": "m³"
          }
        }
      ]
    },
    "rejet": {
      "title": "Rejet — {properties.site}",
      "sections": [
        {
          "type": "properties",
          "fields": [
            "intervenant",
            "nature",
            "secteur",
            "volume_annuel_moyen_m3"
          ]
        },
        {
          "type": "chart",
          "chart_type": "bar",
          "data_field": "volumes_annuels",
          "options": {
            "title": "Volume annuel",
            "xlabel": "Année",
            "ylabel": "m³"
          }
        },
        {
          "type": "chart",
          "chart_type": "line",
          "data_field": "profil_mensuel",
          "options": {
            "title": "Profil mensuel moyen",
            "xlabel": "Mois",
            "ylabel": "m³"
          }
        }
      ]
    }
  }
}